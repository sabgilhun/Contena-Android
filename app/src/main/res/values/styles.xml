<resources xmlns:tools="http://schemas.android.com/tools">
	
	<style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
		<item name="android:statusBarColor">@color/background00</item>
		<item name="android:windowBackground">@color/background00</item>
		<item name="android:navigationBarColor">@color/transparent</item>
		<item name="colorPrimary">@color/primary</item>
		<item name="colorPrimaryDark">@color/primaryDark</item>
		<item name="colorAccent">@color/colorBeigeWhite</item>
		<item name="android:textViewStyle">@style/TextStyle</item>
		<item name="android:buttonStyle">@style/ButtonStyle</item>
	</style>
	
	<style name="SplashTheme" parent="AppTheme"/>
	
	<style name="LoadingDialog" parent="Theme.AppCompat.Dialog.Alert">
		<item name="android:windowBackground">@android:color/transparent</item>
		<item name="android:windowIsTranslucent">true</item>
		<item name="android:windowNoTitle">true</item>
		<item name="android:backgroundDimEnabled">true</item>
	</style>
	
	<style name="TextStyle">
		<item name="android:textSize">14sp</item>
		<item name="android:textColor">@color/colorGray900</item>
		<item name="android:textColorHint">@color/colorGray400</item>
	</style>
	
	<style name="ButtonStyle" parent="TextStyle">
		<item name="android:textColor">@color/colorWhite</item>
		<item name="android:background">@drawable/ripple_subscribe_button_unselected</item>
		<item name="android:focusable">true</item>
		<item name="android:clickable">true</item>
	</style>
	
	<style name="StateButtonStyle" parent="ButtonStyle">
		<item name="android:background">@drawable/selector_subscribe_button</item>
		<item name="android:textColor">@drawable/selector_subscribe_text_color</item>
	</style>
	
	<style name="TabLayoutTextStyle" parent="TextAppearance.Design.Tab">
		<item name="android:textSize" tools:ignore="SpUsage">18dp</item>
		<item name="android:textStyle">bold</item>
	</style>

	<style name="DarkThemeBackground00">
		<item name="background">@color/background00</item>
	</style>
	
	<style name="DarkThemeBackground04">
		<item name="background">@color/background04</item>
		<item name="elevation">4dp</item>
	</style>
	
	<style name="DarkThemeBackground08">
		<item name="background">@color/background08</item>
		<item name="elevation">8dp</item>
	</style>
	
	<style name="DarkThemeBackground12">
		<item name="background">@color/background12</item>
		<item name="elevation">12dp</item>
	</style>
	
	<style name="DarkThemeBackground16">
		<item name="background">@color/background16</item>
		<item name="elevation">16dp</item>
	</style>
</resources>
