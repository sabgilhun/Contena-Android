<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	tools:context=".presenter.home.widget.BottomNavigationBar">
	
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="@drawable/common_top_border"
		android:baselineAligned="false">
		
		<LinearLayout
			android:id="@+id/homeItem"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:background="?android:attr/selectableItemBackground"
			android:clickable="true"
			android:focusable="true"
			android:orientation="vertical"
			android:padding="8dp"
			tools:ignore="UseCompoundDrawables">
			
			<ImageView
				android:id="@+id/homeIcon"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:src="@drawable/ic_home_gray800_24dp"
				tools:ignore="ContentDescription" />
			
			<TextView
				android:id="@+id/homeTitle"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:text="@string/homeTitle"
				android:textSize="12dp"
				tools:ignore="SpUsage" />
		</LinearLayout>
		
		<LinearLayout
			android:id="@+id/searchItem"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:background="?android:attr/selectableItemBackground"
			android:clickable="true"
			android:focusable="true"
			android:orientation="vertical"
			android:padding="8dp"
			tools:ignore="UseCompoundDrawables">
			
			<ImageView
				android:id="@+id/searchIcon"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:src="@drawable/ic_search_gray800_24dp"
				tools:ignore="ContentDescription" />
			
			<TextView
				android:id="@+id/searchTitle"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:text="@string/searchTitle"
				android:textSize="12dp"
				tools:ignore="SpUsage" />
		</LinearLayout>
		
		<LinearLayout
			android:id="@+id/bookmarkItem"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:background="?android:attr/selectableItemBackground"
			android:clickable="true"
			android:focusable="true"
			android:orientation="vertical"
			android:padding="8dp"
			tools:ignore="UseCompoundDrawables">
			
			<ImageView
				android:id="@+id/bookmarkIcon"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:src="@drawable/ic_bookmark_gray800_24dp"
				tools:ignore="ContentDescription" />
			
			<TextView
				android:id="@+id/bookmarkTitle"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:text="@string/bookmarkTitle"
				android:textSize="12dp"
				tools:ignore="SpUsage" />
		</LinearLayout>
		
		<LinearLayout
			android:id="@+id/settingsItem"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:background="?android:attr/selectableItemBackground"
			android:clickable="true"
			android:focusable="true"
			android:orientation="vertical"
			android:padding="8dp"
			tools:ignore="UseCompoundDrawables">
			
			<ImageView
				android:id="@+id/settingsIcon"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:src="@drawable/ic_settings_gray800_24dp"
				tools:ignore="ContentDescription" />
			
			<TextView
				android:id="@+id/settingsTitle"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:text="@string/settingsTitle"
				android:textSize="12dp"
				tools:ignore="SpUsage" />
		</LinearLayout>
	</LinearLayout>
</layout>