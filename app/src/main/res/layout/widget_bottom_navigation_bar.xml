<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	tools:context=".presenter.widget.BottomNavigationBar">
	
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="@drawable/common_top_border"
		android:baselineAligned="false">
		
		<LinearLayout
			android:id="@+id/homeItem"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:background="?android:attr/selectableItemBackgroundBorderless"
			android:clickable="true"
			android:focusable="true"
			android:orientation="vertical"
			android:padding="8dp"
			tools:ignore="UseCompoundDrawables">
			
			<ImageView
				android:id="@+id/homeIcon"
				android:layout_width="28dp"
				android:layout_height="28dp"
				android:layout_gravity="center"
				android:src="@drawable/vector_list_gray400"
				tools:ignore="ContentDescription" />
			
			<TextView
				android:id="@+id/homeTitle"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:text="@string/newItemTitle"
				android:textColor="@color/colorGray400"
				android:textSize="12dp"
				tools:ignore="SpUsage" />
		</LinearLayout>
		
		<LinearLayout
			android:id="@+id/searchItem"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:background="?android:attr/selectableItemBackgroundBorderless"
			android:clickable="true"
			android:focusable="true"
			android:orientation="vertical"
			android:padding="8dp"
			tools:ignore="UseCompoundDrawables">
			
			<ImageView
				android:id="@+id/searchIcon"
				android:layout_width="28dp"
				android:layout_height="28dp"
				android:layout_gravity="center"
				android:src="@drawable/vector_search_gray400"
				tools:ignore="ContentDescription" />
			
			<TextView
				android:id="@+id/searchTitle"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:text="@string/searchTitle"
				android:textColor="@color/colorGray400"
				android:textSize="12dp"
				tools:ignore="SpUsage" />
		</LinearLayout>
	</LinearLayout>
</layout>