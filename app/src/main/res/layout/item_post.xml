<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	tools:context=".presenter.home.adapter.PostAdapter">
	
	<data>
		
		<variable
			name="postListItem"
			type="com.sabgil.contena.presenter.home.model.PostListItem" />
	</data>
	
	<androidx.constraintlayout.widget.ConstraintLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content">
		
		<FrameLayout
			android:id="@+id/logoHolder"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical"
			android:layout_marginStart="16dp"
			android:layout_marginTop="4dp"
			android:layout_marginBottom="4dp"
			android:background="@drawable/shapre_circle_white_backgorund_gray200_border"
			android:padding="6dp"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="parent">
			
			<ImageView
				android:id="@+id/shopLogoImageView"
				android:layout_width="28dp"
				android:layout_height="28dp"
				app:image="@{postListItem.shopLogoUrl}"
				tools:ignore="ContentDescription" />
		</FrameLayout>
		
		<TextView
			android:id="@+id/shopNameTextView"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical"
			android:layout_marginStart="12dp"
			android:includeFontPadding="false"
			android:text="@{postListItem.shopName}"
			android:textSize="16dp"
			app:layout_constraintBottom_toTopOf="@id/uploadDate"
			app:layout_constraintStart_toEndOf="@id/logoHolder"
			app:layout_constraintTop_toTopOf="@id/logoHolder"
			app:layout_constraintVertical_chainStyle="packed"
			tools:ignore="SpUsage"
			tools:text="bluesman" />
		
		<TextView
			android:id="@+id/uploadDate"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical"
			android:layout_marginStart="12dp"
			android:includeFontPadding="false"
			android:text="@{postListItem.uploadDate}"
			android:textColor="@color/colorGray600"
			android:textSize="12dp"
			app:layout_constraintBottom_toBottomOf="@id/logoHolder"
			app:layout_constraintStart_toEndOf="@id/logoHolder"
			app:layout_constraintTop_toBottomOf="@id/shopNameTextView"
			app:layout_constraintVertical_chainStyle="packed"
			tools:ignore="SpUsage"
			tools:text="20.03.01" />
		
		<com.sabgil.contena.presenter.widget.NewProductsSummaryView
			android:id="@+id/newProductsSummaryView"
			android:layout_width="0dp"
			android:layout_height="0dp"
			android:layout_marginTop="4dp"
			android:foreground="?android:selectableItemBackground"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintDimensionRatio="1"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@id/logoHolder" />
		
		<View
			android:layout_width="0dp"
			android:layout_height="0.5dp"
			android:background="@color/commonBorderColor"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="parent" />
	</androidx.constraintlayout.widget.ConstraintLayout>
</layout>