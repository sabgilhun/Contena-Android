<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	tools:context=".presenter.home.adapter.post.PostAdapter">
	
	<data>
		
		<variable
			name="postListItem"
			type="com.sabgil.contena.presenter.home.model.PostListItem" />
		
		<variable
			name="currentNewItem"
			type="com.sabgil.contena.domain.model.SummaryNewItem" />
	</data>
	
	<androidx.constraintlayout.widget.ConstraintLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@drawable/common_top_border"
		android:paddingBottom="12dp">
		
		<FrameLayout
			android:id="@+id/logoHolder"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical"
			android:layout_marginStart="16dp"
			android:layout_marginTop="4dp"
			android:layout_marginBottom="4dp"
			android:background="@drawable/shapre_circle_white_backgorund_gray200_border"
			android:padding="6dp"
			app:layout_constraintBottom_toTopOf="@id/newItemImageViewPager"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="parent">
			
			<ImageView
				android:id="@+id/shopLogoImageView"
				android:layout_width="28dp"
				android:layout_height="28dp"
				app:image="@{postListItem.shopLogoUrl}"
				tools:ignore="ContentDescription" />
		</FrameLayout>
		
		<TextView
			android:id="@+id/shopNameTextView"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical"
			android:layout_marginStart="12dp"
			android:includeFontPadding="false"
			android:text="@{postListItem.shopName}"
			android:textSize="16dp"
			app:layout_constraintBottom_toTopOf="@id/uploadDate"
			app:layout_constraintStart_toEndOf="@id/logoHolder"
			app:layout_constraintTop_toTopOf="@id/logoHolder"
			app:layout_constraintVertical_chainStyle="packed"
			tools:ignore="SpUsage"
			tools:text="bluesman" />
		
		<TextView
			android:id="@+id/uploadDate"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical"
			android:layout_marginStart="12dp"
			android:includeFontPadding="false"
			android:text="@{postListItem.uploadDate}"
			android:textColor="@color/colorGray600"
			android:textSize="12dp"
			app:layout_constraintBottom_toBottomOf="@id/logoHolder"
			app:layout_constraintStart_toEndOf="@id/logoHolder"
			app:layout_constraintTop_toBottomOf="@id/shopNameTextView"
			app:layout_constraintVertical_chainStyle="packed"
			tools:ignore="SpUsage"
			tools:text="20.03.01" />
		
		<androidx.viewpager.widget.ViewPager
			android:id="@+id/newItemImageViewPager"
			android:layout_width="0dp"
			android:layout_height="440dp"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@id/logoHolder" />
		
		<TextView
			android:id="@+id/goTotalNewProductTextView"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_marginStart="6dp"
			android:layout_marginEnd="6dp"
			android:layout_marginBottom="10dp"
			android:background="@drawable/shape_r4_background_black_transperent"
			android:drawableEnd="@drawable/vector_keyboard_arrow_right_white"
			android:gravity="center_vertical"
			android:paddingStart="8dp"
			android:paddingTop="8dp"
			android:paddingEnd="8dp"
			android:paddingBottom="8dp"
			android:text="@string/item_post_go_total_new_product"
			android:textColor="@color/colorWhite"
			android:textSize="12sp"
			app:layout_constraintBottom_toBottomOf="@id/newItemImageViewPager"
			app:layout_constraintEnd_toEndOf="@id/newItemImageViewPager"
			app:layout_constraintStart_toStartOf="@id/newItemImageViewPager"
			app:visibleOrGone="@{postListItem.hasMoreItem}" />
		
		<com.google.android.material.tabs.TabLayout
			android:id="@+id/imagePageTabLayout"
			android:layout_width="0dp"
			android:layout_height="20dp"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@id/newItemImageViewPager"
			app:tabBackground="@drawable/selector_tab_indicator"
			app:tabGravity="center"
			app:tabIndicatorHeight="0dp"
			app:tabMaxWidth="9dp"
			app:tabMode="fixed"
			app:tabPadding="0dp" />
		
		<TextView
			android:id="@+id/brandTextView"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:includeFontPadding="false"
			android:paddingStart="8dp"
			android:paddingEnd="8dp"
			android:text="@{currentNewItem.brandName}"
			android:textSize="14sp"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@id/imagePageTabLayout"
			tools:text="브랜드" />
		
		<TextView
			android:id="@+id/productNameTextView"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:includeFontPadding="false"
			android:paddingStart="8dp"
			android:paddingEnd="8dp"
			android:text="@{currentNewItem.productName}"
			android:textSize="14sp"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@id/brandTextView"
			tools:text="상품 이름" />
		
		<TextView
			android:id="@+id/priceTextView"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_marginTop="4dp"
			android:paddingStart="8dp"
			android:paddingEnd="8dp"
			android:text="@{currentNewItem.price}"
			android:textSize="16sp"
			android:textStyle="bold"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@id/productNameTextView"
			tools:text="100,000" />
	
	</androidx.constraintlayout.widget.ConstraintLayout>
</layout>