<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	tools:context=".presenter.home.adapter.PostAdapter">
	
	<data>
		
		<variable
			name="postListItem"
			type="com.sabgil.contena.presenter.home.model.PostListItem" />
	</data>
	
	<androidx.constraintlayout.widget.ConstraintLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@drawable/shape_card_background"
		android:paddingTop="8dp"
		android:paddingBottom="8dp">
		
		<FrameLayout
			android:id="@+id/logoHolder"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical"
			android:layout_marginStart="16dp"
			android:layout_marginTop="4dp"
			android:layout_marginBottom="4dp"
			android:background="@drawable/shapre_circle_white_backgorund_gray200_border"
			android:padding="6dp"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="parent">
			
			<ImageView
				android:id="@+id/shopLogoImageView"
				android:layout_width="28dp"
				android:layout_height="28dp"
				app:image="@{postListItem.shopLogoUrl}"
				tools:ignore="ContentDescription" />
		</FrameLayout>
		
		<TextView
			android:id="@+id/shopNameTextView"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical"
			android:layout_marginStart="12dp"
			android:includeFontPadding="false"
			android:text="@{postListItem.shopName}"
			android:textColor="@color/colorWhite2"
			android:textSize="16dp"
			app:layout_constraintBottom_toBottomOf="@id/logoHolder"
			app:layout_constraintStart_toEndOf="@id/logoHolder"
			app:layout_constraintTop_toTopOf="@id/logoHolder"
			tools:ignore="SpUsage"
			tools:text="bluesman" />
		
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginStart="4dp"
			android:text=" âˆ™ 10K"
			android:textColor="@color/colorWhite2"
			android:textSize="16sp"
			app:layout_constraintBottom_toBottomOf="@id/shopNameTextView"
			app:layout_constraintStart_toEndOf="@id/shopNameTextView"
			app:layout_constraintTop_toTopOf="@id/shopNameTextView" />
		
		<androidx.cardview.widget.CardView
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_margin="16dp"
			android:background="@color/transparent"
			app:cardCornerRadius="8dp"
			app:cardElevation="0dp"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@id/logoHolder"
			tools:visibility="invisible">
			
			<ImageView
				android:id="@+id/imageView"
				android:layout_width="match_parent"
				android:layout_height="360dp"
				android:scaleType="matrix"
				tools:ignore="ContentDescription" />
			
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="bottom"
				android:layout_marginStart="12dp"
				android:layout_marginBottom="12dp"
				android:text="wool crop cardigan-soft cream\n59,000"
				android:textColor="@color/colorBlack"
				android:textSize="14dp" />
		</androidx.cardview.widget.CardView>
	
	</androidx.constraintlayout.widget.ConstraintLayout>
</layout>